# Clash Royale API Configuration
# Copy this file to .env and fill in your actual values

# API Token (required)
CLASH_ROYALE_API_TOKEN=your_api_token_here

# Default Player Tag (optional - for testing)
# Format: #XXXXXXXX (include the #)
DEFAULT_PLAYER_TAG="#your_player_tag_here"

# API Configuration
API_BASE_URL=https://api.clashroyale.com/v1

# Rate Limiting
REQUEST_DELAY=1  # seconds between requests
MAX_RETRIES=3

# Data Storage
DATA_DIR=../data
EXPORT_FORMAT=json  # json, csv, or both

# Evolution Configuration
# Comma-separated list of cards with unlocked evolutions
# Example: UNLOCKED_EVOLUTIONS="Archers,Knight,Musketeer"
UNLOCKED_EVOLUTIONS=Archers

# Optional: Override evolution slot limit (default: 2)
# EVOLUTION_SLOT_LIMIT=2

# Fuzz Integration Configuration
# Weight for fuzz scoring in deck building (0.0-1.0)
# Default: 0.10 (10% weight for fuzz-based card boosts)
# FUZZ_SCORING_WEIGHT=0.10
